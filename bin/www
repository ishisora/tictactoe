#!/usr/bin/env node

/**
 * Module dependencies.
 */

const app = require('../app');
const debug = require('debug')('tictactoe:server');
const http = require('http');
const WebSocket = require('ws');
const { hostname, port } = require('../config/config');

app.set('hostname', hostname);
app.set('port', port);

/**
 * Create HTTP server.
 */

const server = http.createServer(app);

// WebSocket
const wss = new WebSocket.Server({ server });

const sessionMiddleware = app.get('sessionMiddleware');

let clientNumber = 0;
let squares = ['', '', '', '', '', '', '', '', ''];
let nextplayer = "o";

/*
let rooms = {};

let room = {
    players: {
        o: "session0",
        x: "session1"
    },
    states: {
        squares: ['', '', '', '', '', '', '', '', ''],
        nowPlayer: 'o',
    }
}
*/

wss.on('connection', (ws, req) => {
    const rooms = require('../service/rooms.js');
    console.log(`roomsdebug2: ${JSON.stringify(rooms)}`);
    clientNumber++;
    console.log(`Client connected ${clientNumber}`);
    if (clientNumber % 2 === 1) {
        ws.send(JSON.stringify({ type: 'init', message: 'o', squares: squares }));
    } else {
        ws.send(JSON.stringify({ type: 'init', message: 'x', squares: squares }));
    }
    sessionMiddleware(req, {}, () => {
        console.log(req.session);
        /*
        if (!req.session.userId) {
            console.log('req.session.userIdの値がない')
        } else if (room.first === "") {
            room.first = req.session.userId;
        } else if (room.second === "") {
            room.second = req.session.userId;
        }
        console.log(room);
        // sessionがあるならそのデータの処理をする
        // ないなら新しく処理する
        if (req.session.userId === room.first) {
            console.log(`Client connected o`);
            ws.send(JSON.stringify({ type: 'init', message: 'o', squares: squares }));
        } else if (req.session.userId === room.second) {
            console.log(`Client connected x`);
            ws.send(JSON.stringify({ type: 'init', message: 'x', squares: squares }));
        } else {
            console.log('3人目以降の処理はまだ書いていない');
        }
        */
    });

    ws.addEventListener('error', console.error);

    ws.addEventListener('close', () => {
        console.log('Client disconnected');
    });

    ws.addEventListener('message', (event) => {
        console.log(`Received: ${JSON.stringify(event.data)}`);
        console.log(nextplayer);
        const message = JSON.parse(event.data);

        switch (message.type) {
            case 'playing':
                if (message.type === 'playing') {
                    if (message.player === nextplayer && squares[message.index] === '') {
                        squares[message.index] = message.player;

                        wss.clients.forEach((client) => {
                            client.send(JSON.stringify({ type: 'playing', message: message.index, squares: squares }));
                        });

                        if (nextplayer === 'o') {
                            nextplayer = 'x';
                        } else {
                            nextplayer = 'o';
                        }
                    } else {
                        console.log("!(message.player === nextplayer && squares[message.index] === '')")
                    }

                }
                break;
            case 'reset':
                console.log('message.type = reset');
                wss.clients.forEach((client) => {
                    client.send(JSON.stringify({ type: 'reset' }));
                });
                squares = ['', '', '', '', '', '', '', '', ''];
                nextplayer = 'o';
        }
    });
});

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port, hostname, () => {
    console.log(`debug log: ${JSON.stringify(server.address())}`);
});
//server.listen(port, () => {
//    console.log(`debug log: ${JSON.stringify(server.address())}`);
//});
server.on('error', onError);
server.on('listening', onListening);

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
    if (error.syscall !== 'listen') {
        throw error;
    }

    const bind = typeof port === 'string'
        ? 'Pipe ' + port
        : 'Port ' + port;

    // handle specific listen errors with friendly messages
    switch (error.code) {
        case 'EACCES':
            console.error(bind + ' requires elevated privileges');
            process.exit(1);
            break;
        case 'EADDRINUSE':
            console.error(bind + ' is already in use');
            process.exit(1);
            break;
        default:
            throw error;
    }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
    const addr = server.address();
    const bind = typeof addr === 'string'
        ? 'pipe ' + addr
        : 'port ' + addr.port;
    debug('Listening on ' + bind);
}
